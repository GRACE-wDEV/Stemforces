# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server
PORT=5000
NODE_ENV=production

# Database (use MongoDB Atlas connection string for production)
MONGO_URI=mongodb+srv://<user>:<password>@cluster0.xxxxx.mongodb.net/stemforces?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# AI Services (optional - only if using AI features)
GEMINI_API_KEY=your-gemini-api-key-here

# For local dev, you can use:
# MONGO_URI=mongodb://localhost:27017/stemforces
# NODE_ENV=development
